<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form validation</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      .background {
        z-index: -1;
        background-size: cover;
        background-image: linear-gradient(
            rgba(121, 30, 77, 0.8),
            rgba(121, 30, 77, 0.8)
          ),
          url("./person.jpeg");
        filter: blur(6px);
      }
      .side-column {
        background-size: cover;
        background-position: 50%;
        background-image: linear-gradient(
            rgba(39, 5, 22, 0.8),
            rgba(39, 5, 22, 0.8)
          ),
          url("./person.jpeg");
      }
    </style>
  </head>
  <body>
    <div class="h-full w-full fixed top-0 background"></div>
    <div class="w-full px-8 py-8 mt-32 flex shadow-2xl">
      <div class="w-1/2 p-12 side-column">
        <!-- Your social media registration buttons -->
      </div>
      <div class="w-1/2 p-16 bg-white">
        <h2 class="text-4xl font-bold">Login</h2>
        <p class="my-8 text-xl">
          Don't have an account?
          <a href="/signup" class="text-blue-700 text-2xl">Register Here</a>!!
        </p>
        <form action="/user/login" method="post" id="login">
          <!-- Email section -->
          <div class="formGroup flex flex-col my-4">
            <label for="email" class="text-red-700 text-2xl mt-2 font-bold"
              >Email</label
            >
            <div class="flex items-center">
              <input
                type="email"
                id="email"
                name="email"
                class="w-full border-b-2 border-black outline-none py-2"
              />
            </div>
          </div>
          <!-- Password section -->
          <div class="formGroup flex flex-col my-4">
            <label for="password" class="text-red-700 text-2xl mt-2 font-bold"
              >Password</label
            >
            <div class="flex items-center">
              <input
                type="password"
                id="password"
                name="password"
                class="w-full border-b-2 border-black outline-none py-2"
              />
            </div>
          </div>
          <button
            type="submit"
            class="px-8 py-2 my-4 bg-green-400 w-full rounded-full text-white shadow-lg"
          >
            Login
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
